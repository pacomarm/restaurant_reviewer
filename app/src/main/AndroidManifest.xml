        android:supportsRtl="true"
        android:theme="@style/Theme.Reviewer">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Reviewer.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ReviewsController"></activity>
        <activity android:name=".ReviewsAddController"></activity>
        <activity android:name=".RestaurantsController"></activity>
    </application>

</manifest>